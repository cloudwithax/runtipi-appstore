{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "soularr",
      "image": "ghcr.io/mrusse/soularr:main",
      "user": "1000:1000",
      "networks": ["runtipi_tipi_main_network"],
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "SCRIPT_INTERVAL",
          "value": "${SCRIPT_INTERVAL:-300}"
        },
        {
          "key": "SOULARR_LIDARR_API_KEY",
          "value": "${SOULARR_LIDARR_API_KEY}"
        },
        {
          "key": "SOULARR_LIDARR_HOST",
          "value": "${SOULARR_LIDARR_HOST}"
        },
        {
          "key": "SOULARR_SLSKD_API_KEY",
          "value": "${SOULARR_SLSKD_API_KEY}"
        },
        {
          "key": "SOULARR_SLSKD_HOST",
          "value": "${SOULARR_SLSKD_HOST}"
        },
        {
          "key": "SOULARR_ALBUMS_TO_GRAB",
          "value": "${SOULARR_ALBUMS_TO_GRAB:-10}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/data"
        },
        {
          "hostPath": "${ROOT_FOLDER_HOST}/media/downloads/complete",
          "containerPath": "/downloads"
        }
      ]
    }
  ]
}
